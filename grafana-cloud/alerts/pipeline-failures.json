{
  "uid": "workflow-failure-alert",
  "title": "GitHub Actions Workflow Failure",
  "condition": "A",
  "data": [
    {
      "refId": "A",
      "queryType": "prometheus",
      "model": {
        "expr": "github_actions_workflow_run_status{status=\"failure\"} == 1",
        "intervalMs": 60000,
        "maxDataPoints": 43200
      }
    }
  ],
  "noDataState": "NoData",
  "execErrState": "Alerting",
  "for": "5m",
  "annotations": {
    "summary": "GitHub Actions workflow {{ $labels.workflow }} in {{ $labels.repo }} failed"
  },
  "labels": {
    "severity": "warning"
  }
}