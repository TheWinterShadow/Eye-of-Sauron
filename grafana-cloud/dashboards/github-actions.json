{
  "uid": "github-actions",
  "title": "GitHub Actions Workflows",
  "tags": ["github", "actions", "workflows"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 0,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Workflow Success Rate",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(github_workflow_run_status{status=\"1\"}) / sum(github_workflow_run_status) * 100",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-cicd"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Workflow Runs Over Time",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum by (status) (rate(github_workflow_run_status[5m]))",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-cicd"
          }
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "prometheus"
        }
      }
    ]
  },
  "annotations": {
    "list": []
  },
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {}
}
